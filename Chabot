# Basic Chatbot

def chatbot():
    print("Chatbot: Hi! I am your chatbot. Type 'bye' to exit.")
    while True:
        user_input = input("You: ").lower()

        # Exit condition
        if user_input == "bye":
            print("Chatbot: Goodbye! Have a great day!")
            break

        # Predefined responses
        if "hello" in user_input or "hi" in user_input:
            print("Chatbot: Hello! How can I help you?")
        elif "how are you" in user_input:
            print("Chatbot: I'm just a program, but I'm doing great! How about you?")
        elif "name" in user_input:
            print("Chatbot: I am a simple chatbot. What's your name?")
        elif "help" in user_input:
            print("Chatbot: Sure, I can help! What do you need assistance with?")
        else:
            print("Chatbot: I'm not sure I understand. Can you ask something else?")

# Run the chatbot
chatbot()
